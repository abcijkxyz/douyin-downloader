.menu
  .top
    .item(v-for='item of menus.top' :class='{ active: isActive(item.type) }' @click='onMenuClick(item.type)')
      img(:src='item.icon[isActive(item.type) ? 1 : 0]')
      .name {{ item.name }}
  .bottom
    .item(v-for='item of menus.bottom' :class='{ active: isActive(item.type) }' @click='onMenuClick(item.type)')
      img(:src='item.icon[isActive(item.type) ? 1 : 0]')
      .name {{ item.name }}
